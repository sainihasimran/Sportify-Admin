<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cegep.sportify_admin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".SportifyAdminApp"
        android:allowBackup="true"
        android:icon="@drawable/admin_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/admin_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportifyAdmin">
        <activity
            android:name=".Orders.OrdersActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.SportifyAdmin.NoActionBar" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".product.addProduct.AddProductActivity" />
        <activity android:name=".equipment.addEquipment.AddEquipmentActivity" />
        <activity android:name=".product.editProduct.EditProductActivity" />
        <activity android:name=".equipment.editEquipment.EditEquipmentActivity" />
        <activity android:name=".settings.ProfileActivity"></activity>
        <activity android:name=".LoginActivity" />
    </application>

</manifest>